        string FormatSmallValue(double c, string fmt)
        {
            int pow = 0;

            string view = "";
            if (c > 100)
                view = "overload";
            else
            {
                string[] s = { "", "m", "u", "n", "p", "f", "a" };

                while ((int)c == 0)
                {
                    pow++;
                    c = c * Math.Pow(10, 3);
                }
                view = c.ToString(fmt) + s[pow] + "F";
            }

            return view;
        }

